<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Images</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .image-container img {
            max-width: 100%;
            height: auto;
            margin-bottom: 15px;
        }

        .image-container2 img {
            max-width: 50%;
            height: auto;
            margin-bottom: 10px;
            padding: 10px;
        }

        .slide-container img {
            max-width: 100%;
            height: auto;
            padding: 10px;
        }

        h1 {
            /*font-size: 24px;*/
            /*margin-bottom: 20px;*/
            font-weight: bold;
        }

        .bg-light-custom {
            background-color: #f0f0f0;
            padding: 15px;
            border-radius: 8px;
        }

        .table img {
            max-width: 100%;
            height: auto;
            margin: 0 auto;
            display: block;
        }
    </style>
</head>
<body>
<div class="container-fluid py-5">
    <h1 class="text-center mb-5">ĐIỆN MÁY CHỢ LỚN SCRAPING IMAGE</h1>
    <div class="text-center py-3">
        <button type="submit" class="btn btn-success">Export File PDF</button>
    </div>
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="bg-light-custom">
                <h2 class="text-center">3 ẢNH Ở DƯỚI BANNER</h2>
                <div class="image-container">
                    <%- imgTags %> <!-- Sử dụng <%-   %> để render HTML không bị escape -->
                </div>
            </div>
            <div class="my-4">
                <hr>
            </div>
            <div class="bg-light-custom">
                <h2 class="text-center">ƯU ĐÃI KHI THANH TOÁN</h2>
                <div class="slide-container">
                    <%- imgTags3 %>
                </div>
            </div>
        </div>

        <div class="col-lg-8 mb-4">
            <div class="bg-light-custom">
                <h2 class="text-center">ẢNH SLIDE CHẠY CHẠY</h2>
                <div class="image-container2">
                    <%- imgTags2 %>
                </div>
            </div>
            <div class="my-4">
                <hr>
            </div>
            <div class="bg-light-custom">
                <h2 class="text-center">TIN KHUYẾN MẠI</h2>
                <div class="image-container">
                    <table class="table table-striped table-bordered">
                        <thead class="table-primary">
                        <tr>
                            <th>Ngày Tháng</th>
                            <th>Tên Khuyến Mại</th>
                            <th>Ảnh Khuyến Mại</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(let i = 0; i < ngayKhuyenMai.length; i++) { %>
                            <tr>
                                <td><%= ngayKhuyenMai[i] %></td>
                                <td><%= nameKhuyenMai[i] %></td>
                                <td>
                                    <% if(imgElementsKhuyenMai[i]) { %>
                                        <img src="http:<%= imgElementsKhuyenMai[i] %>" alt="Khuyến Mại">
                                    <% } else { %>
                                        Không có ảnh
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Simple script to cycle through slides
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slide');

    function showSlide(index) {
        slides.forEach((slide, i) => {
            slide.classList.remove('active-slide');
            if (i === index) {
                slide.classList.add('active-slide');
            }
        });
    }

    function nextSlide() {
        currentSlide = (currentSlide + 1) % slides.length;
        showSlide(currentSlide);
    }

    setInterval(nextSlide, 3000); // Change slide every 3 seconds
</script>
</body>
</html>
